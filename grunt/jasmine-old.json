{
  "options": {
    "specNameSuffix": "spec.js",
    "useHelpers": false,
    "stopOnFailure": false,

    "reporters": {
      "console": {
        "colors": true,
        "cleanStack": 1,
        "verbosity": 3,
        "listStyle": "indent",
        "activity": false
      }
    }
  },

  "dist": {
    "specs": [
      "spec/modules/types.spec.js",
      "spec/modules/predicate.spec.js",
      "spec/modules/core.spec.js",
      "spec/modules/math.spec.js",
      "spec/modules/array.spec.js",
      "spec/modules/object.spec.js",
      "spec/modules/cond.spec.js"
    ]
  }
}
